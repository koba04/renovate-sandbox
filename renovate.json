{
  "extends": [
    "github>kufu/renovate-config"
  ],
  "enabledManagers": ["npm"],
  "npm": {
    "schedule": "at any time",
    "separateMinorPatch": true,
    "packageRules": [
      {
        "depTypeList": [
          "devDependencies"
        ],
        "updateTypes": [
          "patch"
        ],
        "automerge": true
      }
    ]
  }
}
